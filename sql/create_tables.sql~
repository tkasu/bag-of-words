CREATE TABLE annual_report
(
id SERIAL PRIMARY KEY,
company_name VARCHAR(255) NOT NULL,
publishing_year int,
publish_date DATE
);

CREATE TABLE report_text
(
report_id int,
order_nro int,
word VARCHAR(255),
PRIMARY KEY (report_id, order_nro),
FOREIGN KEY (report_id) REFERENCES annual_report(id)
);

CREATE TABLE dictionary
(
id SERIAL PRIMARY KEY,
name VARCHAR(255) NOT NULL
);

CREATE TABLE dict_words
(
dict_id SERIAL,
word VARCHAR(255),
PRIMARY KEY (dict_id, word),
FOREIGN KEY (dict_id) REFERENCES dictionary(id)
);
